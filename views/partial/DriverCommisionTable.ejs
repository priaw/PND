<table id="dtOrder" class="table table-sm">
    <thead>
        <tr>
            <th scope="col">ลำดับ <a class="fa fa-fw fa-sort"></a></th>
            <th scope="col">ชื่อผู้ขับ <i class="fa fa-fw fa-sort"></i></th>
            <th scope="col">นามสกุลผู้ขับ <i class="fa fa-fw fa-sort"></i></th>
            <th scope="col">ที่อยู่ผู้ขับ <i class="fa fa-fw fa-sort"></i></th>
            <th scope="col">เบอร์ติดต่อผู้ขับ <i class="fa fa-fw fa-sort"></i></th>
            <th scope="col">หมายเลขประจำตัวผู้ขับ <i class="fa fa-fw fa-sort"></i></th>
            </tr>

    </thead>
    <tbody id="listjobRow">
        <% print.forEach(function (driver) { %>
        <tr value=<%=driver.status %> >
            <th scope="row">
                <%= driver.driver_id %>
            </th>
            <td>
                <%= driver.driver_name %>
            </td>
            <td>
                <%= driver.driver_surname %>
            </td>
            <td>
                <%= driver.driver_address %>
            </td>
            <td>
                <%= driver.driver_contact %>
            </td>
            <td>
                <%= driver.driver_identity %>
            </td>
            
        </tr>
        <% }) %>
    </tbody>
</table>

