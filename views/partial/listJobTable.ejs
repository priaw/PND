<nav>
    <div class="input-group  mb-3 my-2 my-lg-0 col-md-1">
        <select class="custom-select" id="order-select">
            <option id="all" value="listjobs-all">งานทั้งหมด</option>
            <option id="date" value="listjobs-date">วันที่</option>
            <option id="customer" value="listjobs-customer">ชื่อลูกค้า</option>
            <option id="truck" value="listjobs-truck">ชนิดรถ</option>
            <option id="driver" value="listjobs-driver">ชื่อผู้ขับรถ</option>
        </select>
    </div>
</nav>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">ลำดับ</th>
            <th scope="col">วันที่</th>
            <th scope="col">ชื่อลูกค้า</th>
            <th scope="col">ชื่อผู้ติดต่อ</th>
            <th scope="col">ชื่อผู้ขับรถ</th>
            <th scope="col">ชนิดรถ</th>
            <th scope="col">ต้นทาง</th>
            <th scope="col">ปลายทาง</th>
            <th scope="col">ราคา</th>
            <th scope="col">รายละเอียดอื่นๆ</th>
            <th scope="col">แก้ไข</th>
        </tr>
    </thead>
    <tbody>
        <% print.forEach(function (listjob) { %>
        <tr>
            <th scope="row"><%= listjob.id %></th>
            <td><%= moment(listjob.date).add(543, 'year').format('Do MMM YY') %></td>
            <td><%= listjob.customer %></td>
            <td><%= listjob.dealer %></td>
            <td><%= listjob.driver %></td>
            <td><%= listjob.trucks %></td>
            <td><%= listjob.source %></td>
            <td><%= listjob.destination %></td>
            <td><%= listjob.price %></td>
            <td><%= listjob.job_description %></td>
            <td><% include ../modal/edit-listjob-modal.ejs %></td>
        </tr>
        <% }) %>
    </tbody>
</table>

<script>
    
    $("#order-select").change(function () {
        document.location.href = $(this).val();
        document.getElementById("<%= page %>").selected = "true";
    });

    $(function () {
        $('.selectpicker').selectpicker({});
        $('.selectpicker').on('changed.bs.select', function (e) {
            console.log('Value is: ' + this.options[this.selectedIndex].value +
                ' Text is: ' + this.options[this.selectedIndex].textContent);
        });

    });
</script>