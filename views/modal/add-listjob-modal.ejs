<!-- Include jQuery -->
<script type="text/javascript" src="https://code.jquery.com/jquery-1.11.3.min.js"></script>

<!-- Include Date Range Picker -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css" />


<!-- Button trigger modal -->
<button type="button" class="btn btn-dark fas fa-plus" data-toggle="modal" data-target="#addlistModal">&nbsp;
  เพิ่มรายการงาน</button>

<!-- Modal -->
<form action="/insert" method="POST">
  <div class="modal fade" id="addlistModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">เพิ่มรายการงาน</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="modal-body">

            <div class="form-group row">
              <div class="col-sm-4" for="date">
                <span class="align-middle">วันที่/เดือน/ปี</span>
              </div>
              <div class="col-sm-7">
                <div class="input-group align-middle">
                  <input class="form-control" id="dp1" name="date" autocomplete="off" type="text" />
                </div>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-sm-4" for="date">
                <span class="align-middle">ชื่อลูกค้า</span>
              </div>
              <div class="col-sm-7">
                <div class="input-group align-middle">
                  <select class="custom-select" id="customer" name="customer">
                    <option selected>เลือกชื่อลูกค้า...</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                  </select>

                </div>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-4" for="date">
                <span class="align-middle">ชื่อผู้ติดต่อ</span>
              </div>
              <div class="col-sm-7">
                <div class="input-group align-middle">
                  <select class="custom-select" id="dealer" name = "dealer">
                    <% print.forEach(function (listjob) { %>
                    <option selected>
                      <%= listjob.customer_name %>
                    </option>
                    <% }) %>
                  </select>

                </div>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-4" for="date">
                <span class="align-middle">ชื่อคนขับรถ</span>
              </div>
              <div class="col-sm-7">
                <div class="input-group align-middle">
                  <select class="custom-select" id="driver" name="driver">
                    <option selected>เลือกชื่อผู้ขับรถ...</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-4" for="date">
                <span class="align-middle">ชนิดรถ</span>
              </div>
              <div class="col-sm-7">
                <div class="input-group align-middle">
                  <select class="custom-select" id="truck" name ="trucks">
                    <option selected>เลือกชนิดรถ</option>
                    <option value="1">หกล้อบรรทุก</option>
                    <option value="2">หกล้อติดเครน</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-4" for="date">
                <span class="align-middle">ต้นทาง</span>
              </div>
              <div class="col-sm-7">
                <div class="input-group align-middle">
                  <input class="form-control " id="source" name="source" placeholder="..." autocomplete="off"
                    type="text" />
                </div>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-4" for="date">
                <span class="align-middle">ปลายทาง</span>
              </div>
              <div class="col-sm-7">
                <div class="input-group align-middle">
                  <input class="form-control " id="destination" name="destination" placeholder="..."
                    autocomplete="off" type="text" />
                </div>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-4" for="date">
                <span class="align-middle">ราคางาน</span>
              </div>
              <div class="col-sm-7">
                <div class="input-group align-middle">
                  <input class="form-control " id="price" name="price" placeholder="..." autocomplete="off"
                    type="text"></input>
                </div>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-4" for="date">
                <span class="align-middle">รายละเอียดอื่นๆ</span>
              </div>
              <div class="col-sm-7">
                <div class="input-group align-middle">
                  <textarea class="form-control " id="customer" name="job_description" autocomplete="off" type="text"
                    placeholder="..."></textarea>
                </div>
              </div>
            </div>


          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">ยกเลิก</button>
            <button type="submit" class="btn btn-primary" name="submit">บันทึกรายการงาน</button>
          </div>
        </div>
      </div>
    </div>
</form>


<script>
  $('#dp1').datepicker({
    format: 'yyyy-mm-dd',
    autoclose: true,
    todayHighlight: true
  }).datepicker('setDate', 'today');

  $("#clearForm").on("click", function () {
    $(this).val("")
  });

  $("#editButton").click(function () {
    var clicked_id = $("this").val();
    console.log(clicked_id);
  });


</script>